<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.test.MainActivity" >

    <TabHost
        android1:id="@android:id/tabhost"
        android1:layout_width="match_parent"
        android1:layout_height="match_parent"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true" >

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="match_parent"
            android1:orientation="vertical" >

            <TabWidget
                android1:id="@android:id/tabs"
                android1:layout_width="fill_parent"
                android1:layout_height="71dp" >
            </TabWidget>

            <FrameLayout
                android1:id="@android:id/tabcontent"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent" >

                <LinearLayout
                    android1:id="@+id/User"
                    android1:layout_width="301dp"
                    android1:layout_height="match_parent"
                    android1:layout_marginTop="0dp"
                    android1:orientation="vertical" >

                    <TextView
                        android1:id="@+id/status"
                        android1:layout_width="250dp"
                        android1:layout_height="50dp"
                        android1:layout_marginLeft="30dp"
                        android1:textAppearance="?android:attr/textAppearanceMedium" />

                    <Button
                        android1:id="@+id/button3"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:layout_marginLeft="100dp"
                        android1:text="Connect" />

                    <Button
                        android1:id="@+id/button4"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:layout_marginLeft="90dp"
                        android1:text="Disconnect" />

                    <ListView
                        android:id="@+id/listView1"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android1:layout_marginLeft="20dp"
                        android:background="@android:color/background_dark"
                        android:drawSelectorOnTop="false"
                        android:listSelector="@android:color/darker_gray" >

</ListView>
                    
                </LinearLayout>

                <LinearLayout
                    android1:id="@+id/Debug"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent"
                    android1:orientation="vertical" >

                    <EditText
                        android1:id="@+id/name"
                        android1:layout_width="match_parent"
                        android1:layout_height="wrap_content"
                        android1:ems="10"
                        android1:inputType="text"
                        android1:text="Enter Footprint Name" />

                    <Button
                        android1:id="@+id/button1"
                        android1:layout_width="242dp"
                        android1:layout_height="wrap_content"
                        android1:layout_marginLeft="20dp"
                        android1:text="Start Footprinting" />

                    <Button
                        android1:id="@+id/button2"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:layout_marginLeft="100dp"
                        android1:layout_marginTop="0dp"
                        android1:text="Clear" />

                    <EditText
                        android1:id="@+id/gsmcelllocation"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:ems="10" >

                        <requestFocus />
                    </EditText>

                    <EditText
                        android1:id="@+id/mcc"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:ems="10" />

                    <EditText
                        android1:id="@+id/mnc"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:ems="10" />

                    <EditText
                        android1:id="@+id/cid"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:ems="10" />

                    <EditText
                        android1:id="@+id/neighboring"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:ems="10" />
                </LinearLayout>

                <LinearLayout
                    android1:id="@+id/Optional"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent"
                    android:orientation="vertical" >

                    <EditText
                        android1:id="@+id/optional1"
                        android1:layout_width="match_parent"
                        android1:layout_height="wrap_content"
                        android1:ems="10" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>